        function init() {
            populatePainPoints();
            populateRosettaStone();
            setupVerticalFilter();
            populateProspectingTabs();
            populateSpicedAccordion();
            setupScrollSpy();
            initAnimations();
        }

        function initAnimations() {
            // Hero Parallax
            gsap.to(".hero-content", {
                yPercent: 30,
                ease: "none",
                scrollTrigger: {
                    trigger: "#context",
                    start: "top top",
                    end: "bottom top",
                    scrub: true
                }, 
            });

            gsap.to("#context::before", {
                yPercent: 10,
                ease: "none",
                scrollTrigger: {
                    trigger: "#context",
                    start: "top top",
                    end: "bottom top",
                    scrub: true
                }, 
            });
            
            // Visual Growth
            const visualElements = document.querySelectorAll('.visual-content');
            visualElements.forEach(el => {
                gsap.to(el, {
                    scale: 1,
                    opacity: 1,
                    ease: "power1.inOut",
                    scrollTrigger: {
                        trigger: el,
                        start: "top 80%",
                        end: "center 60%",
                        scrub: true,
                    }
                });
            });
        }

        function populatePainPoints() {
            const container = document.getElementById('pain-point-cards');
            if (!container) return;
            container.innerHTML = '';
            painPointData.forEach(point => {
                const card = document.createElement('div');
                card.className = 'bg-white p-6 rounded-lg shadow-sm border border-gray-200 hover:shadow-md transition-shadow duration-300 visual-content';
                card.innerHTML = `
                    <div class="h-8 w-8">${point.icon}</div>
                    <h3 class="mt-4">${point.title}</h3>
                    <p class="mt-2 text-sm">${point.description}</p>
                `;
                container.appendChild(card);
            });
        }
        
        function populateRosettaStone(filter = 'All') {
            const tableBody = document.getElementById('rosetta-table-body');
            if (!tableBody) return;
            tableBody.innerHTML = '';
            const filteredData = filter === 'All' ? rosettaStoneData : rosettaStoneData.filter(d => d.vertical === filter);
            
            filteredData.forEach(row => {
                const tr = document.createElement('tr');
                tr.innerHTML = `
                    <td class="px-4 py-4 align-top text-sm font-bold text-[#10123d]">${row.vertical}</td>
                    <td class="px-4 py-4 align-top text-sm">${row.theme}</td>
                    <td class="px-4 py-4 align-top text-sm">${row.specificPain}</td>
                    <td class="px-4 py-4 align-top text-sm">${row.solution}</td>
                    <td class="px-4 py-4 align-top text-sm">${row.impact}</td>
                    <td class="px-4 py-4 align-top text-sm">${row.persona}</td>
                `;
                tableBody.appendChild(tr);
            });
        }
        
        function setupVerticalFilter() {
            const filterSelect = document.getElementById('vertical-filter');
            if (!filterSelect || filterSelect.options.length > 1) return;
            const verticals = ['All', ...new Set(rosettaStoneData.map(d => d.vertical))];
            verticals.forEach(v => {
                const option = document.createElement('option');
                option.value = v;
                option.textContent = v;
                filterSelect.appendChild(option);
            });
            filterSelect.addEventListener('change', (e) => populateRosettaStone(e.target.value));
        }

        function setupScrollSpy() {
            const sections = document.querySelectorAll('main > section');
            const navLinks = document.querySelectorAll('.nav-link');
            const mobileNav = document.getElementById('mobile-nav');

            const observerOptions = {
                root: null,
                rootMargin: '-80px 0px -50% 0px',
                threshold: 0
            };

            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        const id = entry.target.getAttribute('id');
                        navLinks.forEach(link => {
                            link.classList.toggle('active', link.getAttribute('href') === '#' + id);
                        });
                        if (mobileNav.value !== id) {
                            mobileNav.value = id;
                        }
                    }
                });
            }, observerOptions);

            sections.forEach(section => {
                observer.observe(section);
            });

            mobileNav.addEventListener('change', function() {
                const targetId = this.value;
                const targetElement = document.getElementById(targetId);
                if(targetElement) {
                    targetElement.scrollIntoView({
                        behavior: 'smooth'
                    });
                }
            });
        }
        
        function populateProspectingTabs() {
            const tabsContainer = document.getElementById('prospecting-tabs');
            const contentContainer = document.getElementById('prospecting-content');
            if (!tabsContainer || tabsContainer.children.length > 0) return;

            prospectingData.forEach((tab, index) => {
                const button = document.createElement('button');
                button.className = 'tab-button whitespace-nowrap py-3 px-1 border-b-2 font-bold text-sm hover:border-gray-300';
                button.textContent = tab.title;
                button.dataset.target = tab.id;
                tabsContainer.appendChild(button);

                const content = document.createElement('div');
                content.id = tab.id;
                content.className = 'prospecting-content-panel';
                content.innerHTML = tab.content;
                content.style.display = index === 0 ? 'block' : 'none';
                contentContainer.appendChild(content);

                if (index === 0) {
                    button.classList.add('active');
                }
            });

            tabsContainer.addEventListener('click', e => {
                const button = e.target.closest('.tab-button');
                if (button) {
                    const targetId = button.dataset.target;
                    
                    tabsContainer.querySelectorAll('.tab-button').forEach(btn => btn.classList.remove('active'));
                    button.classList.add('active');

                    contentContainer.querySelectorAll('.prospecting-content-panel').forEach(panel => {
                        panel.style.display = panel.id === targetId ? 'block' : 'none';
                    });
                }
            });
        }

        function populateSpicedAccordion() {
            const container = document.getElementById('spiced-accordion');
            if (!container || container.children.length > 0) return;

            spicedData.forEach(item => {
                const div = document.createElement('div');
                div.className = 'border border-gray-200 rounded-lg';
                div.innerHTML = `
                    <div class="accordion-header flex justify-between items-center p-4 bg-gray-100 hover:bg-gray-200 cursor-pointer rounded-t-lg">
                        <h4 class="flex items-center gap-3"><span class="inline-block w-6 h-6 text-center leading-6 rounded-full bg-[#5ba1ba] text-white font-bold">${item.letter}</span>${item.title}</h4>
                        <span class="transform transition-transform duration-300 text-[#5ba1ba] font-bold text-xl">+</span>
                    </div>
                    <div class="accordion-content bg-white px-4 rounded-b-lg">
                        <div class="pt-4 pb-4">${item.description}</div>
                    </div>
                `;
                container.appendChild(div);
            });

            container.addEventListener('click', e => {
                const header = e.target.closest('.accordion-header');
                if (header) {
                    const content = header.nextElementSibling;
                    const icon = header.querySelector('span:last-child');
                    const isOpen = content.style.maxHeight && content.style.maxHeight !== '0px';
                    
                    container.querySelectorAll('.accordion-content').forEach(c => c.style.maxHeight = '0px');
                    container.querySelectorAll('.accordion-header span:last-child').forEach(i => i.style.transform = 'rotate(0deg)');
                    
                    if (!isOpen) {
                        content.style.maxHeight = content.scrollHeight + 'px';
                    }
                }
            });
        }
         window.addEventListener('load', function() {
            const target = document.getElementById('booking-button-container');
            if (target && window.calendar) {
                calendar.schedulingButton.load({
                  url: 'https://calendar.google.com/calendar/appointments/schedules/AcZssZ2GvfZZxoohtFgmi3KDzWStgJujnt2bUkl_iG2G_1NOOMuVFJ9pfNnwwq7Z70LKp52alJ0JaqnG?gv=true',
                  color: '#308920',
                  label: "Book Time with Ron",
                  target: target,
                });
            } else {
                console.error("Google Calendar script failed to load or the target container was not found.");
            }
        });

        init();
    });
    </script>

</body>
</html>
