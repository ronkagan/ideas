    document.addEventListener('DOMContentLoaded', function() {
        gsap.registerPlugin(ScrollTrigger);

        const painPointData = [
            { 
                title: "Operational Inefficiency", 
                description: "Wasting hours on manual dispatching, inefficient routing, and endless phone calls, leading to high fuel costs and missed delivery windows.",
                icon: '<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8 text-[#5ba1ba]"><path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" /></svg>'
            },
            { 
